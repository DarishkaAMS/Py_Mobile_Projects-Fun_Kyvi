<MySecondGrid>

    first_name: first_name
    last_name: last_name
    email: email
    dream: dream

    GridLayout:
        cols:1
        size: root.width, root.height

        GridLayout:
            cols:2
            Label:
                text: "First name: "
            TextInput:
                id: first_name
                multiline: False
            Label:
                text: "Last name: "
            TextInput:
                id: last_name
                multiline: False
            Label:
                text: "E-Mail: "
            TextInput:
                id: email
                multiline: False
            Label:
                text: "Dream: "
            TextInput:
                id: dream
                multiline: False
        Button:
            text:"Submit"
            on_press: root.press_btn()